{% extends 'base.html.twig' %}

{% block title %}Productos{% endblock %}

{% block body %}
<div class="container col-md-10 mt-5">
    <div class="card">
        <div class="card-header">
            <center><h4>Agrega un producto nuevo</h4></center>
        </div>
        <div class="card-body">
            <form id="registrarProductos" >
                <div class="row col-md-12" >
                    <div class="col-3">
                        <label class="form-label">Codigo</label>
                        <input type="text" class="form-control" id="codigo" required>
                    </div>
                    <div class="col-3">
                        <label class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombre" required>
                    </div>
                    <div class="col-3">
                        <label class="form-label">Marca</label>
                        <input type="text" class="form-control" id="marca" required>
                    </div>
                    <div class="col-3">
                        <label class="form-label">Precio</label>
                        <input type="number" class="form-control" id="precio" required>
                    </div>
                    <div>
                        <label class="form-label">Descripcion</label>
                        <textarea class="form-control" id="descripcion" required></textarea>
                    </div>
                    <div class="mt-3" >
                        <center>Por favor selecciona la categoria</center>
                        <select id="categorias" class="form-control" required>
                            <option value="" > -- Categorias disponibles -- </option>
                        </select>
                    </div>
                </div>
                <button id="registrar" type="submit" class="btn btn-outline-success mt-4">Registrar</button>
            </form>
        </div>
    </div>
    <div class="card mt-4">
        <div class="card-header">
            <center><h4>Lista de categorias</h4></center>
        </div>
        <div class="card-body table-responsive">
            <table id="productosTabla" class="table table-borderless">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Codigo</th>
                        <th>Nombre</th>
                        <th>Descripcion</th>
                        <th>Marca</th>
                        <th>Precio</th>
                        <th>Accion</th>
                    </tr>
                </thead>
                <tbody id="productos" >
                {% for item in products %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td>{{ item.code }}</td>
                        <td>{{ item.name }}</td>
                        <td>{{ item.description }}</td>
                        <td>{{ item.brand }}</td>
                        <td>{{ item.price }}</td>
                        <td><button delete="{{item.id}}"  class="btn btn-outline-danger eliminar" >Eliminar</button></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="{{ asset('Js/Products.js') }}" ></script>
{% endblock %}
