{% extends 'base.html.twig' %}

{% block title %}Categorias{% endblock %}

{% block body %}
<div class="container col-md-10 mt-5">
    <div class="card">
        <div class="card-header">
            <center><h4>Editar categoria {{ product.name }}</h4></center>
        </div>
        <div class="card-body">
            <form id="editarProductos" >
                <input type="hidden" id="id" value="{{ product.id }}"  />
                <div class="row col-md-12" >
                    <div class="col-3">
                        <label class="form-label">Codigo</label>
                        <input value="{{ product.code }}" type="text" class="form-control" id="codigoEditar" required>
                    </div>
                    <div class="col-3">
                        <label class="form-label">Nombre</label>
                        <input value="{{ product.name }}" type="text" class="form-control" id="nombreEditar" required>
                    </div>
                    <div class="col-3">
                        <label class="form-label">Marca</label>
                        <input value="{{ product.brand }}" type="text" class="form-control" id="marcaEditar" required>
                    </div>
                    <div class="col-3">
                        <label class="form-label">Precio</label>
                        <input value="{{ product.price }}" type="number" class="form-control" id="precioEditar" required>
                    </div>
                    <div>
                        <label class="form-label">Descripcion</label>
                        <textarea class="form-control" id="descripcionEditar" required>{{ product.description }}</textarea>
                    </div>
                    <div class="mt-3" >
                        <center>Por favor selecciona la categoria</center>
                        <select id="categoriasEditar" class="form-control" required>
                            <option value="" > -- Categorias disponibles -- </option>
                        </select>
                    </div>
                </div>
                <button id="editar" type="submit" class="btn btn-outline-success mt-4 float-end">Editar</button>
            </form>
            <a href="/products" ><button class="btn btn-outline-primary mt-4">Volver</button></a>
        </div>
    </div>
</div>
<script src="{{ asset('Js/Products.js') }}" ></script>
{% endblock %}
